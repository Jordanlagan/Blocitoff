<script>blocmetrics.report('loaded');</script>
<p id="<%= item.id %>">
  <small><%= distance_of_time_in_words(Time.now, item.created_at + 7.days) + " before deletion" %></small>
  <br>
  <% if item.user == current_user %>
    <%= link_to "", user_item_path(user_id: current_user.id, id: item.id), remote: true, method: :delete, class: 'glyphicon glyphicon-ok', style: 'color:#1d600e;' %>
  <% end %>
  &nbsp;<%= item.name %>
</p>
