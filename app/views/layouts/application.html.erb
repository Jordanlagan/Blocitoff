<!DOCTYPE html>
<html>
  <head>
    <title>Blocitoff</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
         <ul class="nav nav-tabs">
            <li> <%= link_to "Home", root_path %> </li>
            <% if user_signed_in? %>
              <li class="pull-right"><%= link_to "Edit profile", edit_user_registration_path, :class => 'navbar-link' %></li>
              <li class="pull-right"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              <li class="pull-right user-info">Signed in as: <strong> <%= current_user.email %> </strong></li>

            <% else %>
              <li class="pull-right"><%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %></li>
              <li class="pull-right"><%= link_to "Sign In", new_user_session_path, :class => 'navbar-link' %></li>
            <% end %>
        </ul>
     </nav>


      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert] %>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>

  <div class="container">
    	<%= yield %>
	</div>

  </body>

</html>
